{
	"compilerOptions": {
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"paths": {
			"@chap-room/main/*": [
				"main/src/*"
			],
			"@chap-room/admin/*": [
				"admin/src/*"
			],
			"@chap-room/shared/*": [
				"shared/src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"tmp"
	]
}
